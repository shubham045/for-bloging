<div class="modal-header">
   <h3 id="myModalLabel">Modal header</h3>
 </div>
 <div class="modal-body">
  <%= form_for(@user, url: verify_user_otp_path(@user), remote: true, method: :post, :html => {:class => 'otp-form' }) do |form| %>

   <div class="field">
     <%= form.label :mobile %><br />
     <%= form.text_field :mobile, autofocus: true, placeholder: "+91-9009458216", :readonly => true %>
   </div>

   <div class="field">
     <%= form.label :otp %><br />
     <%= form.text_field :otp, autofocus: true, placeholder: "xxxx" %>
     <div class='otp-error-container'>
      <span>cant' be blank</span>
     </div>
   </div>
   <%= form.submit "Submit"%>
   <% end %>
 </div>

 <div class="modal-footer">
   <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
 </div>
